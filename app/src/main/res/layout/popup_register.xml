<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="2dp"
    android:background="@color/colorAccentRed1"
    >
    <ImageButton
        android:contentDescription="@string/close_button"
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:layout_toEndOf="@id/reg_linear_layout"
        />

    <LinearLayout
        android:id="@+id/reg_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingEnd="14sp"
        android:paddingStart="25sp"
        android:theme="@style/MyEditTextTheme">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:paddingTop="25sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/register_title"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingTop="20sp"
            android:paddingBottom="5sp"
            android:text="@string/register_popup"
            android:textColor="@color/colorPrimary" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_reg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="15sp"
                android:padding="5sp"
                android:inputType="textPersonName"
                android:hint="@string/username_hint_edit_text"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pin_reg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="15sp"
                android:padding="5sp"
                android:hint="@string/pin_hint_edit_text"
                android:inputType="numberPassword"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/email_reg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email_hint_edit_text"
                android:inputType="textEmailAddress"
                android:padding="5sp"
                android:textSize="15sp"
                android:imeOptions="actionNext"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/phone_reg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="15sp"
                android:padding="5sp"
                android:hint="@string/phone_hint_edit_text"
                android:inputType="phone"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/city_reg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/city_hint_edit_text"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:padding="5sp"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/countryreg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/country_hint_edit_text"
                android:inputType="textCapCharacters"
                android:padding="5sp"
                android:textSize="15sp"
                android:visibility="visible"
                android:imeOptions="actionDone"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sumbit_reg_button"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="@string/register_button" />


    </LinearLayout>

</RelativeLayout>